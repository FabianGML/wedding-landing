---
import Layout from "@/layouts/Layout.astro";
import Gallery from "@/sections/Gallery.astro";
import Gifts from "@/sections/Gifts.astro";
import Header from "@/sections/Header.astro";
import Hero from "@/sections/Hero.astro";
import Location from "@/sections/Location.astro";
import Timer from "@/sections/Timer.astro";
import { getI18N } from "@/i18n/index";
import Tips from "@/sections/Tips.astro";
import Important from "@/sections/Important.astro";
import Analytics from '@vercel/analytics/astro'

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
    title="Pamela & Alex wedding"
    description={i18n.SEO_DESCRIPTION}
    lang={currentLocale}
>
    <Header />
    <Hero />
    <Timer />
    <Important />
    <Location />
    <Tips />
    <Gifts />
    <Gallery />
    <Analytics />
</Layout>
