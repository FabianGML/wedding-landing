---
interface Props {
    id: string;
    label: string;
}

const { id, label } = Astro.props;
---

<div class="flex flex-col items-center">
    <div
        class="md:w-24 md:h-24 w-12 h-12 flex items-center justify-center border-2 border-(--secondary-color) rounded-full mb-3"
    >
        <span
            id={id}
            class="md:text-4xl text-xl font-light text-(--secondary-color)"
            >0
        </span>
    </div>
    <span class="text-xs uppercase tracking-widest text-(--secondary-color)">
        {label}
    </span>
</div>
