---
import { Image } from "astro:assets";
import tipCard from "@/assets/images/tipCard.webp";
import SpotCard from "./SpotCard.astro";
import type { Spot } from "@/sections/Tips.astro";

interface Props {
    title: string;
    spots: Spot[];
    contentImg: ImageMetadata;
}
const { title, spots, contentImg } = Astro.props;
---

<article class="relative">
    <Image src={tipCard} alt="Tip Card" />
    <div
        class="absolute h-4/5 w-7/9 md:w-6/8 top-1/7 md:top-1/10 left-1/12 md:right-2/13 flex md:gap-5 items-center"
    >
        <Image
            src={contentImg}
            alt={title}
            class="object-contain h-1/2 w-1/5 md:h-3/4 md:w-1/3"
            style="object-position: left center;"
        />
        <div class="flex flex-col gap-2 flex-2">
            <h3 class="absolute left-0 top-5 md:static text-3xl md:text-5xl">
                {title}
            </h3>
            {
                spots.map((spot) => (
                    <SpotCard
                        name={spot.name}
                        description={spot.description}
                        mapUrl={spot.mapUrl}
                        websiteUrl={spot.websiteUrl}
                        igUrl={spot.igUrl}
                    />
                ))
            }
        </div>
    </div>
</article>
