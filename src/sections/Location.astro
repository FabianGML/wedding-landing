---
import LocationGallery from "@/components/LocationGallery.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Map from "@/components/Map.astro";
import { getI18N } from "@/i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<SectionContainer title={i18n.LOCATION_TITLE}>
    <div class="flex flex-col md:flex-row lg:flex-row gap-10">
        <div class="map-container w-1/2">
            <Map />
        </div>
        <div class="md:w-1/2">
            <h3 class="text-6xl mt-7">{i18n.LOCATION_SECTION_TITLE_1}</h3>
            <p class="text-xl">
                {i18n.LOCATION_SECTION_DESC_1}
                <a
                    href="https://www.google.com/maps?q=Hacienda+La+Galera,+Durango,+Dgo.+MÃ©xico"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-accent rounded-lg px-2 py-1 transition-colors duration-200 text-white hover:cursor-pointer hover:bg-accent/60 hover:text-secondary"
                >
                    Hacienda La Galera
                </a>
            </p>
            <h3 class="text-6xl mt-18">{i18n.LOCATION_SECTION_TITLE_2}</h3>
            <data set:html={i18n.LOCATION_SECTION_DESC_2} />
            <h3 class="text-6xl mt-18">{i18n.LOCATION_SECTION_TITLE_3}</h3>
            <p class="text-xl">
                {i18n.LOCATION_SECTION_DESC_3}
            </p>
        </div>
    </div>
    <LocationGallery />
</SectionContainer>

<style>
    .map-container {
        position: relative;
        width: 100%;
        height: 450px;
        border-radius: 16px;
        border: 3px solid var(--color-accent);
        background-color: #fff;
        box-shadow:
            0 4px 12px rgba(212, 181, 167, 0.2),
            0 8px 24px rgba(0, 0, 0, 0.08);
        padding: 2px;
    }

    .map-container::before {
        content: "";
        position: absolute;
        top: 12px;
        left: 12px;
        right: 12px;
        bottom: 12px;
        border: 2px solid var(--color-accent);
        border-radius: 8px;
        z-index: 10;
        pointer-events: none;
        opacity: 0.6;
    }

    .map-container iframe {
        border-radius: 8px;
    }

    @media (min-width: 768px) {
        .map-container {
            height: 500px;
        }
    }

    @media (min-width: 1024px) {
        .map-container {
            height: 550px;
        }
    }
</style>
