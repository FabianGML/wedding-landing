---
import { getI18N } from "@/i18n";
import letter from "@/assets/images/letter.webp";
import { Image } from "astro:assets";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="flex flex-col items-center gap-8 text-center">
    <div class="relative max-w-3xl">
        <div class="flex">
            <Image src={letter} alt="Gifts" class="w-1/3 object-contain self-center"/>
            <p class="text-xl md:text-2xl leading-relaxed italic px-4 text-start" style="font-family: 'Lora', ui-serif, Georgia, serif; color: var(--color-secondary);">
                {i18n.GIFTS_DESC_1}
                <strong class="not-italic font-bold px-1.5 py-0.5 rounded bg-secondary text-main">
                    {i18n.GIFTS_STRONG_1}
                </strong>
                {i18n.GIFTS_DESC_2}
                <strong class="not-italic font-bold px-1.5 py-0.5 rounded bg-secondary text-main">
                    {i18n.GIFTS_STRONG_2}
                </strong>
                {i18n.GIFTS_DESC_3}
            </p>
        </div>
    </div>

    <div class="mt-4 flex items-center gap-3 opacity-40" style="color: var(--color-secondary);">
        <div class="h-px w-48 bg-current"></div>
        <span class="text-2xl">â€¢</span>
        <div class="h-px w-48 bg-current"></div>
    </div>
</div>

<style>
    p {
        font-family: "Lora", ui-serif, Georgia, serif;
        color: var(--color-secondary);
    }
</style>